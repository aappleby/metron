#ifndef REGISTER_H
#define REGISTER_H

#include "config.h"
#include "constants.h"
#include "metron/metron_tools.h"

template <int WIDTH = 32, int INITIAL = 0>
class single_register {
 public:
  logic<1> reset;
  logic<1> write_enable;
  logic<WIDTH> next;
  logic<WIDTH> value_;

  single_register() { value_ = INITIAL; }

  void tock() { tick(); }

 private:
  void tick() {
    if (reset)
      value_ = INITIAL;
    else if (write_enable)
      value_ = next;
  }
};

